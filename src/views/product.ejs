<%- include('partials/header.ejs') %>

<div class="container py-5">
  <div class="row">
    <div class="col-md-6 pe-5">
      <div class="card p-0">
        <img
          src="<%= product.imageUrl %>"
          alt="<%= product.name %>"
          class="img-fluid card-img"
        />
      </div>
    </div>
    <div class="col-md-6 pt-2">
      <div class="d-flex justify-content-between align-items-center pb-2">
        <h1><%= product.name %></h1>
        <h1 class="text-success">$<%= product.price.toFixed(2) %></h1>
      </div>
      <p class="pb-4"><%= product.description %></p>
      <div class="d-flex flex-column align-items-end">
        <div
          class="col-md-6 d-flex text-nowrap justify-content-between align-items-center mb-2"
        >
          <span class="form-label pt-1">In stock: </span>
          <input
            type="number"
            name="quantity"
            value="<%= product.quantity - (inCart?.quantity || 0) %>"
            disabled="true bg-dark"
            class="form-control ms-3"
          />
        </div>
        <form action="/cart/add" method="POST" class="col-md-6">
          <input type="hidden" name="id" value="<%= product.id %>" />
          <div class="d-flex justify-content-between align-items-center mb-3">
            <label for="quantity" class="form-label pt-1">Quantity:</label>
            <input
              type="number"
              name="quantity"
              value="1"
              min="1"
              class="form-control ms-4"
            />
          </div>
          <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Add to Cart</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>
